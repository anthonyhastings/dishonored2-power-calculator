{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "color-hex-case": "upper",
    "color-hex-length": "long",
    "comment-no-empty": true,
    "order/properties-alphabetical-order": true,
    "scss/at-import-partial-extension": "always",
    "string-quotes": "single"
  }
}